<div id="header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to t("name_system"), root_path, id: "logo" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home"></span>
              <%= t("home") %>
            <% end %>
          </li>
          <% if logged_in? %>
            <% if current_user.is_admin? %>
              <li class="dropdown">
                <%= link_to "#", {class: "dropdown-toggle",
                  "data-toggle": "dropdown"} do %>
                  <%= t "admin.role" %>
                  <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to admin_users_path do %>
                      <span class="glyphicon glyphicon-user"></span>
                      <%= t "admin.management_user" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_categories_path do %>
                      <span class="glyphicon glyphicon-list"></span>
                      <%= t "admin.management_category" %>
                    <% end %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li>
                <%= link_to users_path do %>
                  <span class="glyphicon glyphicon-list"></span>
                  <%= t "user" %>
                <% end %>
              </li>
            <% end %>
            <li><%= link_to t("category.categories"), categories_path %></li>
            <li><%= link_to t("words"), words_path %></li>
            <li>
              <%= link_to "#", {class: "dropdown-toggle",
                "data-toggle": "dropdown"} do %>
                <%= image_tag current_user.avatar.url, class: "image-nav" %>
                <%= current_user.name %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to current_user do %>
                    <span class="glyphicon glyphicon-user"></span>
                    <%= t "profile" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <span class="glyphicon glyphicon-cog"></span>
                    <%= t "settings" %>
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to sign_out_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-out"></span>
                    <%= t "sign_out" %>
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to sign_up_path do %>
                <span class="glyphicon glyphicon-list-alt"></span>
                <%= t "sign_up" %>
              <% end %>
            </li>
            <li>
              <%= link_to sign_in_path do %>
                <span class="glyphicon glyphicon-log-in"></span>
                <%= t "sign_in" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
