<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("name_system") , "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></span> </li>
        <li><%= link_to t("sign_up"), sign_up_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("sign_out"), sign_out_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_in"), sign_in_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
