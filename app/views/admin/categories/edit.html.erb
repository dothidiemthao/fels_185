<% provide :title, t("category.update_title") %>
<h2><%= t "category.update_title" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :quantity_question %>
        <%= f.text_field :quantity_question, class: "form-control" %>
      </div>

      <%= f.submit t("update.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
