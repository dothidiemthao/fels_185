<% provide :title, t("categories") %>
<h2><%= t "categories" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :quantity_question %>
      <%= f.text_field :quantity_question, class: "form-control" %>

      <%= f.submit t("category.btn_create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
