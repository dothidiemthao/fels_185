<% provide :title, t("update.title_page") %>
<h2 class="center"><%= t "update.admin.title" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", disabled: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", disabled: true %>
      </div>

      <div class="form-group">
        <%= f.label :is_admin %>
        <%= f.check_box :is_admin %>
      </div>

      <%= f.submit t("update.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
