<li>
  <%= image_tag user.avatar.url, class: "image" %>
  <h3><%= link_to user.name, user %>
    <% if current_user.is_admin? && !current_user?(user) %>
      | <%= link_to t("delete"), user, method: :delete,
        data: {confirm: t("admin.destroy_confirm")} %>
      | <%= link_to t("edit"), edit_admin_user_path(user) %>
    <% end %>
  </h3>
</li>
