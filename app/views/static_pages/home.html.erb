<div class="container">
  <%= yield %>
  <% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
      </aside>
      <div class="col-md-8">
        <aside class="col-md-4">
          <%= link_to t("btn_word"), words_path,
            class: "btn btn-primary btn-large" %>
        </aside>
        <aside class="col-md-4">
          <%= link_to t("btn_lesson"), categories_path,
            class: "btn btn-primary btn-large" %>
        </aside>
      </div>

      <div class="col-md-8 panel panel-success">
        <div class="panel-heading">
          <h1 class="panel-title title_header"><%= t "activities" %></h1>
        </div>
        <div class="panel-body title_body">
          <p><%= t "activities" %></p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="center jumbotron">
      <h1><%= t "welcome" %></h1>
      <h2><%= t "warning_login" %></h2>
    </div>
  <% end %>
